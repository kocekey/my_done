/* pages/detail-movie/detail-movie.wxss */
@import"../template/star-template/star-template.wxss";
.detail-container{
  display: flex;
  flex-direction: column;
}
.detailimg{
  width: 100%;
  height: 340rpx;
  -webkit-filter: blur(2px);
}
.detail{
  position: absolute;
  top: 40rpx;
  left: 70rpx;
  display: flex;
  flex-direction: column;
}
.detail-title
{
  font-size: 50rpx;
  color:black;
}
.detail-address{
  font-size: 30rpx;
  color:black;
  margin-top: 20rpx;
}
.detail-like{
  font-size: 30rpx;
  color:red;
  margin-top: 20rpx;
}
.detail-img{
  position: absolute;
  top: 150rpx;
  right: 50rpx;
  height: 300rpx;
  width: 180rpx;
}
.detail-data{
  display: flex;
  flex-direction: column;
}
.detail-row{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 50rpx;
}
.detail-title-title{
  margin-top: 50rpx;
  margin-left: 50rpx;
}
.detail-score{
  color: hotpink;
  font-size: small;
  margin-right: 30rpx;
}
.hr{
  width: 100%;
  margin-top: 50rpx;
  height: 1px;
  background-color: gainsboro;
}
.detail-summary{
  display: flex;
  flex-direction: column;
}
.detail-summary-data
{
  margin-top: 20rpx;
  margin-left: 50rpx;
  margin-bottom: 20rpx;
  color: black;
  font-size: 25rpx;
}
.detail-summary-area{
  margin-left: 50rpx;
  margin-right: 50rpx;
  font-size: 25rpx;
  line-height: 45rpx;
  letter-spacing: 1px;
}